# Server Configuration
PORT=3000

# Admin Password (CHANGE THIS IN PRODUCTION!)
ADMIN_PASSWORD=admin123

# Supabase Configuration (Required for database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Use Transaction Pooler for better performance on Heroku
DB_URL=postgresql://postgres.your-project:[YOUR_PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres
DB_PASSWORD=your_db_password
DB_USER=postgres.your-project
DB_HOST=aws-0-us-east-1.pooler.supabase.com
DB_PORT=6543
DB_NAME=postgres

# Twilio WhatsApp Configuration (Required for WhatsApp bot)
WHATSAPP_ACCOUNT_SID=your_twilio_account_sid
WHATSAPP_AUTH_TOKEN=your_twilio_auth_token
WHATSAPP_NUMBER=whatsapp:+14155238886

# SMS Configuration (Optional - for Twilio SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# GPS Location Configuration
COMPANY_LATITUDE=-22.9068
COMPANY_LONGITUDE=-43.1729
MAX_DISTANCE_METERS=200

# Environment
NODE_ENV=development

# Get your Supabase credentials from: https://app.supabase.com/
# Get your Twilio credentials from: https://console.twilio.com/
