{
  "name": "botcheckin",
  "version": "0.1.0",
  "description": "Webhook for Twilio WhatsApp -> Node.js with SQLite (roles: staff, manager, supervisor)",
  "main": "src/server.js",
  "engines": {
    "node": "18.x || 20.x",
    "npm": "9.x || 10.x"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "db:seed": "node scripts/seed-database.js",
    "db:view": "node scripts/view-database.js",
    "db:migrate-supabase": "node scripts/migrate-to-supabase.js",
    "db:switch-supabase": "node scripts/switch-to-supabase.js",
    "db:switch-sqlite": "node scripts/switch-to-sqlite.js"
  },
  "keywords": [
    "whatsapp",
    "twilio",
    "checkin",
    "attendance",
    "webhook"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.79.0",
    "better-sqlite3": "^8.2.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "heroku": "^10.15.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
